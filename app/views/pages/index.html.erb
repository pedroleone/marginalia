  <div
    class="
      container mx-auto flex flex-col items-center justify-between gap-4 px-4 py-8
      md:flex-row
    "
  >
    <div class="flex items-center gap-2">
      <%= image_tag "logo.png", alt: "Logo", class: "h-6 w-6" %>
      <p class="text-sm text-slate-600">
        &copy; 2025 Marginalia. A personal project.
      </p>
    </div>
    <div class="flex gap-4 text-sm text-slate-600">
      <a href="#" class="hover:text-sky-500">Privacy</a>
      <a href="#" class="hover:text-sky-500">Terms</a>
      <a href="#" class="hover:text-sky-500">Contact</a>
    </div>
  </div>
</footer>

<div class="mx-auto md:w-2/3 w-full">

  <h1 class="font-bold text-4xl">Create your account</h1>

  <%= form_with model: @user, url: signup_path, method: :post, class: "contents" do |form| %>
    <div class="my-5">
      <%= form.email_field :email_address,
                       required: true,
                       autocomplete: "email",
                       placeholder: "Email address",
                       class:
                         "block shadow-sm rounded-md border border-gray-400 focus:outline-solid focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.password_field :password,
                          required: true,
                          maxlength: 72,
                          autocomplete: "new-password",
                          placeholder: "Password",
                          class:
                            "block shadow-sm rounded-md border border-gray-400 focus:outline-solid focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.password_field :password_confirmation,
                          required: true,
                          maxlength: 72,
                          autocomplete: "new-password",
                          placeholder: "Confirm password",
                          class:
                            "block shadow-sm rounded-md border border-gray-400 focus:outline-solid focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
    </div>

    <% if @user.errors.any? %>
      <p
        class="
          py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block
        "
      >
        <%= @user.errors.full_messages.to_sentence %>
      </p>
    <% end %>

    <div class="inline">
      <%= form.submit "Sign up",
                  class:
                    "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <p class="mt-6 text-gray-600">
    Already have an account?
    <%= link_to "Sign in", new_session_path, class: "text-blue-600 hover:underline" %>
  </p>
</div>
